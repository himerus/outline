{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "inlineSources": true,
  },
  "paths": {
    "@phase2/*": ["packages/*"]
  },
  "include": ["packages/**/*.ts"],
  "exclude": [
    "packages/outline-templates/*",
    "packages/outline-cli/*",
    "node_modules",
    "dist",
    "**/node_modules/*",
    "**/coverage/*",
    "**/dist/**/*",
    "*.tsbuildinfo"
  ]
}
